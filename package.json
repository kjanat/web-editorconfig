{
	"name": "web-editorconfig",
	"version": "0.1.0",
	"private": true,
	"description": "Browser extension for customizing tab-width rendering on GitHub",
	"keywords": [
		"browser-extension",
		"editorconfig",
		"github",
		"tab-width",
		"wxt",
		"svelte"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/kjanat/web-editorconfig"
	},
	"license": "MIT",
	"author": "kjanat",
	"type": "module",
	"scripts": {
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"postinstall": "wxt prepare",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox"
	},
	"devDependencies": {
		"@tsconfig/svelte": "^5.0.6",
		"@wxt-dev/module-svelte": "^2.0.4",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"wxt": "^0.20.6"
	},
	"trustedDependencies": [
		"spawn-sync"
	]
}
